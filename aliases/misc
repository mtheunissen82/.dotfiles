# shellcheck shell=bash

# Navigation
alias cd..='cd ..'
alias ..='cd ..'
alias .2='cd ../..'
alias .3='cd ../../../'
alias .4='cd ../../../..'
alias -- -="cd -"

# Bookmark
alias bm='bookmark_cd_fzf' # list bookmarks
alias bms='bookmark_set_cwd' # bookmark set
alias bmu='bookmark_unset_cwd' # bookmark unset
alias bmo='bookmark_open' # open bookmark with nvim

# Bash
alias lrc='source ~/.bashrc' # load rc
alias erc='vim ~/.bashrc; source ~/.bashrc' # edit rc

# Eza
alias ls="eza"
alias ll='eza --long --git --icons'
alias lt='eza --tree --level=2 --icons'

# Various
alias v='nvim'
alias z='zed'
alias h='history'
alias j='jobs -l'
alias mkdir='mkdir -p'
alias cl='clear'
alias clipkey='cat ~/.ssh/id_rsa.pub | xclip -selection clipboard'
alias less='less -r'
alias l='less'
alias vagrantsup='vagrant up && vagrant ssh'
alias ag='ag --color --pager "less -RF"'
alias stat='stat -c "%n %A (%a) %U %G %s"'
alias les='less'
alias python='python3'
# https://github.com/sharkdp/bat
alias cat='bat'

# Docker
alias dex='docker exec'
alias dexit='docker exec --interactive --tty'
alias di='docker inspect'
alias dc='docker compose'
alias dcup='docker compose up --detach'

# Networking
alias ils='ip link show'
alias ias='ip addr show'
alias iptables='sudo iptables --list --line-numbers --verbose --numeric'
alias route='route -n'
alias hosts='sudo vim /etc/hosts'

# Apt
alias apti='apt_install_fzf'
alias aptr='apt_remove_fzf'

# Development
alias dev='kitty --detach --session ~/.config/kitty/dev.session'
