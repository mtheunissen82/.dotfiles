[
  {
    "context": "vim_mode == normal",
    "bindings": {
      ", e": "vim::ToggleProjectPanelFocus",
      ", b": "tab_switcher::Toggle",
      ", f f": "file_finder::Toggle",
      ", f g": "workspace::NewSearch",
      ", z": "pane::CloseActiveItem",
      // Navigating from editor to project panel
      "ctrl-h": "workspace::ActivatePaneLeft",
    },
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      // Improve word navigation for camelCase or snake_case
      "w": "vim::NextSubwordStart",
      "b": "vim::PreviousSubwordStart",
      "e": "vim::NextSubwordEnd",
      "g e": "vim::PreviousSubwordEnd",
    },
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      // Navigating from project panel to editor
      ", e": "workspace::ToggleLeftDock",
      "ctrl-l": "workspace::ActivatePaneRight",
    },
  },
  {
    "context": "vim_mode == normal || vim_mode == visual",
    "bindings": {
      ", c c": "vim::ToggleComments",
    },
  },
  {
    "context": "TabSwitcher",
    "bindings": {
      // QoL binding for navigating buffers
      "j": ["workspace::SendKeystrokes", "ctrl-n"],
      "k": ["workspace::SendKeystrokes", "ctrl-p"],
      "d": "tab_switcher::CloseSelectedItem",
      "q": ["workspace::SendKeystrokes", "escape"],
    },
  },
  {
    // Yes we still love Lazygit
    "context": "Editor && vim_mode == normal && !VimWaiting && !menu",
    "bindings": {
      ", g g": [
        "task::Spawn",
        { "task_name": "Lazygit", "reveal_target": "center" },
      ],
    },
  },
]
